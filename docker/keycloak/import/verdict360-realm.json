{
  "realm": "Verdict360",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "defaultRoles": ["user"],
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Default user role"
      },
      {
        "name": "attorney",
        "description": "Legal professional with full case access"
      },
      {
        "name": "paralegal",
        "description": "Support staff with limited case editing"
      },
      {
        "name": "admin",
        "description": "System administrator"
      },
      {
        "name": "client",
        "description": "Legal client with limited access"
      },
      {
        "name": "document_manager",
        "description": "Can manage legal documents"
      },
      {
        "name": "audio_recorder",
        "description": "Can record and transcribe audio"
      }
    ],
    "client": {
      "Verdict360-web": [
        {
          "name": "manage_matters",
          "description": "Can create and manage legal matters"
        },
        {
          "name": "view_matters",
          "description": "Can view legal matters"
        },
        {
          "name": "upload_documents",
          "description": "Can upload legal documents"
        },
        {
          "name": "view_documents",
          "description": "Can view legal documents"
        },
        {
          "name": "export_documents",
          "description": "Can export legal documents"
        }
      ]
    }
  },
  "groups": [
    {
      "name": "Attorneys",
      "path": "/Attorneys",
      "attributes": {
        "department": ["Legal"]
      },
      "realmRoles": ["attorney", "document_manager", "audio_recorder"],
      "clientRoles": {
        "Verdict360-web": ["manage_matters", "view_matters", "upload_documents", "view_documents", "export_documents"]
      },
      "subGroups": []
    },
    {
      "name": "Paralegals",
      "path": "/Paralegals",
      "attributes": {
        "department": ["Legal Support"]
      },
      "realmRoles": ["paralegal", "document_manager", "audio_recorder"],
      "clientRoles": {
        "Verdict360-web": ["view_matters", "upload_documents", "view_documents"]
      },
      "subGroups": []
    },
    {
      "name": "Administrators",
      "path": "/Administrators",
      "attributes": {
        "department": ["IT"]
      },
      "realmRoles": ["admin"],
      "clientRoles": {
        "Verdict360-web": ["manage_matters", "view_matters", "upload_documents", "view_documents", "export_documents"]
      },
      "subGroups": []
    },
    {
      "name": "Clients",
      "path": "/Clients",
      "realmRoles": ["client"],
      "clientRoles": {
        "Verdict360-web": ["view_matters", "view_documents"]
      },
      "subGroups": []
    }
  ],
  "clients": [
    {
      "clientId": "Verdict360-web",
      "name": "Verdict360 Web Application",
      "rootUrl": "http://localhost:3000",
      "adminUrl": "http://localhost:3000",
      "baseUrl": "http://localhost:3000",
      "surrogateAuthRequired": false,
      "enabled": true,
      "alwaysDisplayInConsole": false,
      "clientAuthenticatorType": "client-secret",
      "redirectUris": [
        "http://localhost:3000/*"
      ],
      "webOrigins": [
        "http://localhost:3000"
      ],
      "notBefore": 0,
      "bearerOnly": false,
      "consentRequired": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "publicClient": true,
      "frontchannelLogout": false,
      "protocol": "openid-connect",
      "attributes": {
        "saml.assertion.signature": "false",
        "saml.multivalued.roles": "false",
        "saml.force.post.binding": "false",
        "saml.encrypt": "false",
        "saml.server.signature": "false",
        "saml.server.signature.keyinfo.ext": "false",
        "exclude.session.state.from.auth.response": "false",
